<%= tag.div(flash[:alert], style: "color:red") if flash[:alert] %>
<%= tag.div(flash[:notice], style: "color:green") if flash[:notice] %>

<div class="items-center gap-0.5 flex flex-col justify-between">
  <div>
    <h1>Sign up</h1>
  </div>

  <%= form_with url: session_path do |form| %>
    <div
      class="
        flex flex-col gap-2 items-center w-[640px] h-[466px] justify-center
      "
    >
      <label class="flex flex-col">
        <span
          class="
            text-gray-700 after:ml-0.5 after:text-red-500 after:content-['*']
          "
        >Email</span>
        <%= form.email_field :email_address,
                         required: true,
                         autofocus: true,
                         autocomplete: "username",
                         placeholder: "you@example.com",
                         value: params[:email_address],
                         class:
                           "border border-gray-300 rounded text-sm h-[38px] w-[210px]" %>
      </label>

      <div class="flex flex-col space-y-0.5 gap-0">
        <span
          class="
            text-gray-700 after:ml-0.5 after:text-red-500 after:content-['*']
          "
        >Password</span>
        <%= form.password_field :password,
                            required: true,
                            autocomplete: "current-password",
                            placeholder: "password@123",
                            maxlength: 72,
                            class:
                              "border border-gray-300 rounded text-sm h-[38px] w-[210px]" %>
        <%= link_to "Forgot password?",
        new_password_path,
        class: "text-blue-600 hover:underline text-xs" %>
      </div>

      <%= form.submit "Sign up",
                  class:
                    "rounded-xl h-[42px] w-[92px] bg-blue-400 cursor-pointer hover:bg-blue-500" %>
    </div>
  <% end %>
</div>
